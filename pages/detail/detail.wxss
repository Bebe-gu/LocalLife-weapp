/* pages/detail/detail.wxss */
.slides {
    width: 100%;
    height: 580rpx;
}

.slides image {
    width: 100%;
    height: 100%;
}

.content {
    padding: 40rpx;
    background-color: #fff;
    margin-bottom: 15rpx;
    box-shadow: 0 2px 5px #ccc;
    
}

.content .title {
    font-size: 40rpx;
}

.content .info-text {
    padding: 5rpx;
    font-size: 24rpx;
    color: #666;
   display: flex;
    
}
.content .info-text text{
   
   
    
}
.content .info-text text:first-child{
    font-weight: bold;
    color: #222;
    
}
.content .info-text text:last-child{
   flex: 1;
    
}
.percent{
    text-align: right;
    font-size: 24rpx;
    color: rgb(252, 26, 26);
}

.comments {
    display: flex;
    padding-bottom:10rpx; 

}

.comments text:first-child {
    color: #000;
    flex: 1;
    font-size: 28rpx;
}

.comments text:last-child {
    font-size: 24rpx;
    color: #444;
}

.comments-content {
    font-size: 24rpx;
    color: #888;
}