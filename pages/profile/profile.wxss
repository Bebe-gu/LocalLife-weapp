/* pages/profile/profile.wxss */

.avatar-box {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    /* filter: blur(10rpx); */
    box-sizing: border-box;
    padding: 100rpx 0;
    background-color: #fff;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.info {
    padding: 10rpx 0;
}